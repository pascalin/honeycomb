{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
  <h1><span class="font-semi-bold">{{ project }}</span> <span class="smaller"></span></h1>
  <p class="lead"></p>

  {% if map %}
  {{ map.render()|safe }}
  {% else %}
    <form method="post" accept-charset="utf-8" enctype="multipart/form-data">
    <label for="honeycomb_map">Honeycomb Map</label>
    <input id="honeycomb_map" name="honeycomb_map" type="file" value="" />

    <input type="submit" value="submit" />
</form>
  {% endif %}

  <h2><span class="font-normal">List of available cells</span></h2>
    <ul>
{%  for cell, url in cells %}
    <li><a href="{{ url }}">{{ cell.title }}</a></li>
{% endfor %}
    </ul>

  <h2><span class="font-normal">Crear nuevo contenido</span></h2>
  <div class="crud-actions">
    <a href="{{ request.resource_url(context, 'create_cell_text') }}" class="btn btn-primary">Crear Texto</a>
    <a href="{{ request.resource_url(context, 'create_cell_richtext') }}" class="btn btn-primary">Crear Texto Enriquecido</a>
    <a href="{{ request.resource_url(context, 'create_cell_animation') }}" class="btn btn-primary">Crear Animación</a>
    <a href="{{ request.resource_url(context, 'create_cell_webcontent') }}" class="btn btn-primary">Crear Contenido Web</a>
    <a href="{{ request.resource_url(context, 'create_cell_icon') }}" class="btn btn-primary">Crear Ícono</a>
  </div>
</div>
{% endblock content %}
