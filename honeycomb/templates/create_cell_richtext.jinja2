{% extends "layout.jinja2" %}

{% block content %}
<div class="content" style="max-width: 800px; margin: 2rem auto;">
    <h2>Crear nuevo Contenido de Texto Enriquecido</h2>
    <form method="post" enctype="multipart/form-data" style="margin-top: 2rem;">
        <input type="hidden" name="type" value="cell_richtext" />
        
        <div class="form-group" style="margin-bottom: 1.5rem;">
            <label for="title" style="display: block; margin-bottom: 0.5rem; font-weight: bold;">Título:</label>
            <input type="text" id="title" name="title" required style="width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px;" />
        </div>
        
        <div class="form-group" style="margin-bottom: 1.5rem;">
            <label for="contents" style="display: block; margin-bottom: 0.5rem; font-weight: bold;">Contenido HTML:</label>
            <textarea id="contents" name="contents" required style="width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px; height: 200px;"></textarea>
        </div>
        
        <div class="form-group" style="margin-bottom: 1.5rem;">
            <label for="icon" style="display: block; margin-bottom: 0.5rem; font-weight: bold;">Ícono (URL):</label>
            <input type="text" id="icon" name="icon" style="width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px;" />
        </div>
        
        <div class="crud-actions" style="margin-top: 2rem;">
            <button type="submit" class="btn btn-primary">Crear Contenido</button>
            <a href="{{ request.resource_url(honeycomb) }}" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
{% endblock %}
